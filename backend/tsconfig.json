{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs", // CommonJS로 컴파일
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true, // import x from "y" 지원
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": ["src"]
}
